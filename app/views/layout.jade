doctype html
head
	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge')
	meta(name='viewport', content='width=device-width, initial-scale=1')
	title Poll Machine #{layout.title}
	// Bootstrap CSS
		link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet')
	// HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
	// WARNING: Respond.js doesn t work if you view the page via file://
	//if lt IE 9
		script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
		script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
	link(rel="stylesheet", href="/css/main.css")
body
	.wrap
		nav.navbar.navbar-default
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/home') Poll-Machine
				#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav
						li(class={active: layout.active === '/home'})
							a(href='/home') Home
						li(class={active: layout.active === '/about'})
							a(href='/about') About
						li(class={active: layout.active === '/contact'})
							a(href='/public-polls') Public Polls
					ul.nav.navbar-nav.navbar-right
						if layout.username
							li(class={active: layout.active === '/user'})
								a(href='/user/#{layout.username}')= layout.username
							li
								a(href='/logout') Logout
						else
							li(class={active: layout.active === '/login'})
								a(href='/login') Login
							li(class={active: layout.active === '/register'})
								a(href='/register') Register
		block content

	footer.footer
		.container
			.row
				.social-links.text-center
					a.btn-social(href="https://twitter.com/gollactive" title="twitter")
						i.fa.fa-twitter
					a.btn-social(href="https://github.com/golle404/PollMachine" title="github")
						i.fa.fa-github
					a.btn-social(href="http://codepen.io/golle404/" title="codepen")
						i.fa.fa-codepen
					a.btn-social(href="http://www.freecodecamp.com/golle404" title="free-code-camp")
						i.fa.fa-fire
	script(src="/lib/jquery/dist/jquery.min.js")
	script(src="/lib/bootstrap/dist/js/bootstrap.min.js")
	case layout.active
		when "/new-poll"
			script(src="/js/new-poll.js")