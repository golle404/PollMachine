extends ./layout.jade

block content
	.container
		.row
			.panel-login
				if layout.info
					.alert.alert-warning(role="alert")= layout.info
				.panel.panel-default
					.panel-heading
						h3.panel-title Register 
							span or 
							a(href='/login') login
					.panel-body
						.col-md-6.form-login
							form(role='form', action="/register",method="post", required)
								input.form-control(type='text', name="username", placeholder='Enter Username', autofocus)
								input.form-control(type='password', name="password", placeholder='Password', required)
								button.btn.btn-primary(type='submit') Register
						.col-md-6.oauth-login
							p Use your Github or Twitter account to log in:
							a.btn.btn-default(href="/auth/github") Login via Github
								i.fa.fa-github.pull-right
							br
							a.btn.btn-default(href="/auth/twitter") Login via Twitter
								i.fa.fa-twitter.pull-right
					.panel-footer