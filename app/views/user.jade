extends ./layout.jade

block content
	.container
		.row
			.content
				.row
					.content-header
						h1 Hello 
							span.username=user.username
							if user.domain
								span.domain @#{user.domain}
						if !polls
							p.lead.text-center It seams you dont have any polls created.
						else
							p.lead.text-center Check results of your polls or
						p.text-center
							a.btn.btn-primary(type='button' href="/new-poll/") Create new poll
				.row
					.content-body
						if polls
							include ./poll-list.jade
							